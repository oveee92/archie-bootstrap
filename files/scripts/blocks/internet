#!/bin/sh

case $BLOCK_BUTTON in
	1) $TERMINAL -e nmtui ;;
	3) pgrep -x dunst >/dev/null && notify-send \
		"ğŸŒ Internet module" "\- Click to connect
ğŸ“¶: wifi connection (with quality)
ğŸŒ: ethernet working
		" ;;
esac

[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] &&  \
[ "$(cat /sys/class/net/e*/operstate)" = 'down' ] && result="â";

[ "$(cat /sys/class/net/w*/operstate)" = 'up' ] && result="ğŸ“¶";
[ "$(cat /sys/class/net/e*/operstate)" = 'up' ] && result=echo "ğŸŒ";
[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] &&  \
[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && result="â";


echo $result

